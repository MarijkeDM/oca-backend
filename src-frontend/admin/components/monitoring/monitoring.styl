.monitoring
  text-align center
  .osa-background
    background url(/static/images/shop/OnzeStadApp_1920x1080.jpg) no-repeat center center fixed
    background-size cover
    height calc(100vh - 64px)

  h1
    font-size 5em

  h2
    font-size 3em
    margin 0
  .huge-text
    font-size 4em
  p
    margin .2em 0
    font-size 3em
    font-weight 500

  div[class*="has-"]
    transition all 500ms

  .has-success
    background-color rgba(255, 255, 255, 0.5)

  .has-error
    background-color rgba(255, 0, 0, 0.5)
    h1
    h2
    p
      color white

  .has-warning
    background-color rgba(255, 255, 0, 0.5)

  .center-both
    display flex
    align-items center
    align-content center
  .clear-btn
    padding 10px 20px
    font-size 1.2em

  #scoreboard
    .md-button
      padding 0
      margin 0